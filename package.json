{
  "name": "astro-screenshot-testing-demo",
  "type": "module",
  "version": "1.0.0",
  "description": "A modern Astro site demonstrating automated screenshot testing with Docker Chrome containers and GitHub Actions CI/CD",
  "repository": {
    "type": "git",
    "url": "https://github.com/MichaelFisher1997/diff-demo-repo.git"
  },
  "keywords": [
    "astro",
    "screenshot-testing",
    "docker",
    "selenium",
    "tailwindcss",
    "react",
    "github-actions",
    "ci-cd",
    "e2e-testing"
  ],
  "author": "Michael Fisher",
  "license": "MIT",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test:e2e": "nightwatch",
    "test:e2e:ci": "nightwatch --env chrome",
    "test:docker": "docker-compose run nightwatch",
    "test:chrome": "SELENIUM_HOST=localhost SELENIUM_PORT=4444 BASE_URL=http://localhost:4324 nightwatch --env chrome tests/screenshots.js",
    "test:selenium": "node selenium-screenshots.js",
    "test:selenium:ci": "BASE_URL=http://localhost:4324 node selenium-screenshots.js"
  },
  "dependencies": {
    "astro": "^4.0.0",
    "tailwindcss": "^3.3.0",
    "@astrojs/tailwind": "^5.0.0",
    "@astrojs/react": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "http-server": "^14.1.0",
    "nightwatch": "^3.0.0",
    "selenium-webdriver": "^4.35.0"
  },
  "packageManager": "bun@1.0.0"
}