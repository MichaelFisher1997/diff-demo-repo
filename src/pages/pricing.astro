---
import Layout from '../components/Layout.jsx';
import '../styles/global.css';
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pricing - Minimal Site</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body class="min-h-screen bg-gray-50">
    <Layout title="Pricing - Minimal Site">
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Simple, Transparent Pricing</h1>
        <p class="text-xl text-gray-600">Choose the plan that works best for you</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <div class="bg-white p-8 rounded-lg shadow-sm border">
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Starter</h3>
          <div class="text-4xl font-bold text-gray-900 mb-6">
            $9<span class="text-lg font-normal text-gray-600">/month</span>
          </div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd"></path>
              </svg>
              <span class="text-gray-700">5 Projects</span>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd"></path>
              </svg>
              <span class="text-gray-700">10GB Storage</span>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd"></path>
              </svg>
              <span class="text-gray-700">Email Support</span>
            </li>
          </ul>
          <button class="w-full bg-gray-900 text-white py-3 rounded-lg font-semibold hover:bg-gray-800 transition-colors">
            Get Started
          </button>
        </div>

        <div class="bg-blue-600 text-white p-8 rounded-lg shadow-lg border-2 border-blue-600 relative">
          <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-blue-600 text-white px-4 py-1 rounded-full text-sm font-semibold">
            Popular
          </div>
          <h3 class="text-2xl font-bold mb-4">Professional</h3>
          <div class="text-4xl font-bold mb-6">
            $29<span class="text-lg font-normal text-blue-100">/month</span>
          </div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center">
              <svg class="w-5 h-5 text-blue-200 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd"></path>
              </svg>
              <span>Unlimited Projects</span>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-blue-200 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd"></path>
              </svg>
              <span>100GB Storage</span>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-blue-200 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd"></path>
              </svg>
              <span>Priority Support</span>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-blue-200 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd"></path>
              </svg>
              <span>Advanced Analytics</span>
            </li>
          </ul>
          <button class="w-full bg-white text-blue-600 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors">
            Get Started
          </button>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-sm border">
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Enterprise</h3>
          <div class="text-4xl font-bold text-gray-900 mb-6">
            $99<span class="text-lg font-normal text-gray-600">/month</span>
          </div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd"></path>
              </svg>
              <span class="text-gray-700">Everything in Pro</span>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd"></path>
              </svg>
              <span class="text-gray-700">Unlimited Storage</span>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd"></path>
              </svg>
              <span class="text-gray-700">24/7 Phone Support</span>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd"></path>
              </svg>
              <span class="text-gray-700">Custom Integration</span>
            </li>
          </ul>
          <button class="w-full bg-gray-900 text-white py-3 rounded-lg font-semibold hover:bg-gray-800 transition-colors">
            Contact Sales
          </button>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm border p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">Feature Comparison</h3>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b">
                <th class="text-left py-3 px-4 font-semibold text-gray-900">Feature</th>
                <th class="text-center py-3 px-4 font-semibold text-gray-900">Starter</th>
                <th class="text-center py-3 px-4 font-semibold text-gray-900">Professional</th>
                <th class="text-center py-3 px-4 font-semibold text-gray-900">Enterprise</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-b">
                <td class="py-3 px-4 text-gray-700">Projects</td>
                <td class="py-3 px-4 text-center text-gray-700">5</td>
                <td class="py-3 px-4 text-center text-gray-700">Unlimited</td>
                <td class="py-3 px-4 text-center text-gray-700">Unlimited</td>
              </tr>
              <tr class="border-b">
                <td class="py-3 px-4 text-gray-700">Storage</td>
                <td class="py-3 px-4 text-center text-gray-700">10GB</td>
                <td class="py-3 px-4 text-center text-gray-700">100GB</td>
                <td class="py-3 px-4 text-center text-gray-700">Unlimited</td>
              </tr>
              <tr class="border-b">
                <td class="py-3 px-4 text-gray-700">Support</td>
                <td class="py-3 px-4 text-center text-gray-700">Email</td>
                <td class="py-3 px-4 text-center text-gray-700">Priority</td>
                <td class="py-3 px-4 text-center text-gray-700">24/7 Phone</td>
              </tr>
              <tr class="border-b">
                <td class="py-3 px-4 text-gray-700">Analytics</td>
                <td class="py-3 px-4 text-center text-gray-700">Basic</td>
                <td class="py-3 px-4 text-center text-gray-700">Advanced</td>
                <td class="py-3 px-4 text-center text-gray-700">Custom</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
    </Layout>
</body>
</html>